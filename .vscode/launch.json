{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Node.js",
            "port": 9229, // Use the port number from the debugging URL
            "address": "localhost",
            "restart": true,
            "sourceMaps": false,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": null,
            "outFiles": [],
            "runtimeExecutable": "nodemon" // Path to your Node.js executable
          },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\execute\\run.js"
        }
    ]
}