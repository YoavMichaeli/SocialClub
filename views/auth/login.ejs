<!DOCTYPE html>
<html>
  <%- include('../head') -%>

  <body>
    <div class="container-fluid">
      <a href="/" class="float-left">
        <h2>
          
        </h2>
      </a>
    </div>
    <br>
    <center>
      <div class="container-fluid" style="font-size: 50px;">
      <a href="/" >
      SocialClub
    </a>
  </div>
    </center>
    <br><br>
<div class="col-sm-6 col-sm-offset-3">
    <!-- show any messages that come back with authentication -->
    <% if (error) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
    <% } %>
    <!-- LOGIN FORM -->
    <form action="/account/getin" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label class="text-muted">Username</label>
            <input type="text" placeholder="Enter Username" class="form-control" name="username" required>
        </div>
        <div class="form-group">
            <label class="text-muted">Password</label>
            <input type="password" placeholder="Enter Password" class="form-control" name="password" required>
        </div>

        <button type="submit" class="btn btn-action btn-warning">GET ME IN</button>

    </form>

    <hr>
    <span class="text-muted">Don't have Social Club account? <a href="/account/new">Get one now!</a> </span>
  <script type="text/javascript" src="/javascripts/socket.io.js"></script>
  <script type="text/javascript" src="/javascripts/connect.js"></script>
</div>
