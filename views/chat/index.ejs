<!DOCTYPE html>
<html>
  <%- include('../head') -%>
    <link rel="stylesheet" type="text/css" href="/stylesheets/moment.css">
    <link type="text/css" rel="stylesheet" media="screen" href="/animations/jquery-sakura.min.css" />
  <body>
  <%- include('../navbar')	-%>
    <br>
    <div class="container" id="mainPage">
      <ul class="list-group">
  <li class="list-group-item active"><strong>Talk to someone</strong></li>
  <% for(var i=0;i<users.length;i++) { %>
    <li class="list-group-item">
      <img class="logo" src="<%= users[i].profile_pic %>" alt="">
      <a href="/chat/<%= users[i]._id %>" style="color:black;"><%= users[i].username %></a>
      <button onclick="deleteHistory('<%= users[i]._id %>')" type="submit" style="float:right; margin-left: 4px;" class="btn btn-sm btn-danger"> Delete Chat History </button>
    </li>
  <% } %>
</ul>
    </div>
    <%- include('../tabs') %>
    <%- include('../footer') -%>
    <div id="notify_message" class="notify_message-success">
    	<center>Deleting chat history successfully!</center>
    </div>
  </body>

  <script type="text/javascript" src="/javascripts/chat.js"></script>
</html>
